    "updateTodo": [
      "curl -X PATCH http://localhost:3000/todos/YOUR_TODO_ID -H \"Content-Type: application/json\" -d '{\"completed\":true}'",
      "curl -X PATCH http://localhost:3000/todos/YOUR_TODO_ID -H \"Content-Type: application/json\" -d '{\"title\":\"Updated title\",\"completed\":false}'"
